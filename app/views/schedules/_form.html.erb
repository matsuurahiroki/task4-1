<!-- app/views/schedules/_form.html.erb -->
<%= form_with model: schedule do |f| %>
  <div>
    <%= f.label :title, 'タイトル（必須・20文字以内）' %><br>
    <%= f.text_field :title, required: true, maxlength: 20 %>
  </div>

  <div>
    <%= f.label :start_on, '開始日（必須）' %><br>
    <%= f.date_field :start_on, required: true %>
  </div>

  <div>
    <%= f.label :end_on, '終了日（必須・開始日以降）' %><br>
    <%= f.date_field :end_on, required: true %>
  </div>

  <div>
    <%= f.label :all_day, '終日' %>
    <%= f.check_box :all_day %>
  </div>

  <div>
    <%= f.label :memo, 'スケジュールメモ（500文字以内）' %><br>
    <%= f.text_area :memo, rows: 6, maxlength: 500 %>
  </div>

  <div style="margin-top: 8px;">
    <%= f.submit %>
  </div>
<% end %>
